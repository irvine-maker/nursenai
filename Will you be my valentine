<script>
    const yesBtn = document.getElementById("yes");
    const noBtn = document.getElementById("no");
    const buttonsDiv = document.getElementById("buttons");
    const questionDiv = document.getElementById("question");
    const sweetMessageDiv = document.getElementById("sweetMessage");

    let yesSize = 1; // scale factor

    // User clicks NO
    noBtn.addEventListener("click", () => {
        yesSize += 0.5; // increase yes button size
        yesBtn.style.transform = `scale(${yesSize})`;

        if (yesSize >= 10) { // max size to fill screen
            yesBtn.innerText = "You have no choice ‚ù§Ô∏è";
        }
    });

    // User clicks YES
    yesBtn.addEventListener("click", () => {
        // Hide question, show sweet message
        questionDiv.style.display = "none";
        sweetMessageDiv.style.display = "block";
    });
</script>

